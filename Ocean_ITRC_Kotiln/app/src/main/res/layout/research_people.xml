<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#9F000000"
    android:orientation="vertical">

    <LinearLayout
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/background_corner"
        android:backgroundTint="@color/white"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.75"
        app:layout_constraintHeight_percent="0.7"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/dismissbt"
            android:src="@android:drawable/ic_delete"
            android:background="#00000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="10dp"
            app:tint="@color/black" />

        <ImageView
            android:id="@+id/select_research_people_img"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:src="@drawable/defaultimg"></ImageView>


        <TextView
            android:id="@+id/select_research_people_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="고준혁"
            android:fontFamily="@font/nanummyeongjoextrabold"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:textSize="8pt"
            />

        <TextView
            android:id="@+id/select_research_people_department"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="컴퓨터 공학과"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:fontFamily="@font/nanummyeongjobold"/>

        <TextView
            android:id="@+id/select_research_people_role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UIT 연구원"
            android:fontFamily="@font/nanummyeongjobold"
            android:textColor="@color/black"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/select_research_people_phonenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="041-000-0000"
            android:fontFamily="@font/nanummyeongjobold"
            android:textColor="@color/black"
            android:layout_gravity="center"/>

        <TextView
            android:layout_marginBottom="40dp"
            android:id="@+id/select_research_people_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20161467@hoseo.edu"
            android:fontFamily="@font/nanummyeongjobold"
            android:textColor="@color/black"
            android:layout_gravity="center"/>





    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>