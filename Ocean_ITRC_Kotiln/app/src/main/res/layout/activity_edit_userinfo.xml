<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".UI.Pager.UserInfo.Edit_info.Edit_userinfo">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fillViewport="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이름 : "
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    />

                <com.google.android.material.textfield.TextInputEditText

                    android:id="@+id/edit_userinfo_name"
                    android:layout_marginStart="10dp"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/black"
                    android:textColor="@color/black"
                    android:text="이름"/>

            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="부서 : "
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_userinfo_department"
                    android:layout_marginStart="10dp"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/black"
                    android:textColor="@color/black"
                    android:text="부서"/>

            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="직위 : "
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_userinfo_position"
                android:layout_marginStart="10dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/black"
                android:textColor="@color/black"
                android:text="직위"/>

            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="소속 : "
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_userinfo_Belong"
                android:layout_marginStart="10dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/black"
                android:textColor="@color/black"
                android:text="NULL"/>

            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="전화번호 : "
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_userinfo_phone"
                    android:layout_marginStart="10dp"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/black"
                    android:textColor="@color/black"
                    android:text="010-3333-3333"/>

            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이메일 : "
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_userinfo_email"
                    android:layout_marginStart="10dp"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/black"
                    android:textColor="@color/black"
                    android:text="sunsu9944@naver.com"/>

            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="주소 : "
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_userinfo_address"
                    android:layout_marginStart="10dp"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/black"
                    android:textColor="@color/black"
                    android:text="천안시 두정역서1길 22 202 -306"/>

            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="비밀번호 변경 : "
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_userinfo_checkPw"
                    android:layout_marginStart="10dp"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/black"
                    android:textColor="@color/black"
                    android:hint="비밀번호는 6자리 이상적어야합니다."
                    android:inputType="textPassword"/>

            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="비밀번호 확인 : "
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_userinfo_input_Pw"
                    android:layout_marginStart="10dp"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/black"
                    android:textColor="@color/black"
                    android:hint="비밀번호는 6자리 이상적어야합니다."
                    android:inputType="textPassword"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/edit_userinfo_cancelbt"
            android:layout_marginRight="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cancel"/>

        <Button
            android:id="@+id/edit_userinfo_Changebt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change"/>

    </LinearLayout>




</LinearLayout>