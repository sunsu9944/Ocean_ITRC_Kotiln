<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/background_corner"
        android:backgroundTint="#1C2245"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintHeight_percent="0.9"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialog_classify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="발표"
                android:textSize="10pt"
                android:textColor="@color/white"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:fontFamily="@font/nanummyeongjoextrabold"/>


            <ImageButton
                android:id="@+id/dialog_result_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_delete"
                android:background="#1C2245"
                app:tint="@color/white"

                android:layout_marginEnd="10dp" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:background="@color/white">
            <LinearLayout
                android:layout_marginHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dialog_result_title"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="30dp"
                    android:fontFamily="@font/nanummyeongjobold"
                    android:textColor="@color/black"
                    android:textSize="8pt"
                    android:text="수중기지국 기반 수중음향통신 시스템에 관한 연구"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="#20000000"/>


                <TextView
                    android:id="@+id/dialog_result_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="10dp"
                    android:text="2015-06-24"
                    android:textColor="@color/black"
                    android:textSize="8pt" />

                <LinearLayout
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="저자 : "
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:textSize="8pt" />

                    <TextView
                        android:layout_marginStart="10dp"
                        android:id="@+id/dialog_result_member"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="고학림, 이승구, 김민상, 조대영, 김길용, 박병훈, 박종원, 임용곤"
                        android:textColor="@color/black"
                        android:textSize="8pt"
                        android:layout_gravity="center"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="발표국가 : "
                        android:textSize="8pt"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_marginStart="10dp"
                        android:id="@+id/dialog_result_country"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="국내"
                        android:textColor="@color/black"
                        android:textSize="8pt"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="기술 : "
                        android:textSize="8pt"
                        android:textColor="@color/black"
                        android:layout_gravity="center"/>


                    <TextView
                        android:id="@+id/dialog_result_media"
                        android:layout_marginStart="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="한국통신학회지 제 37권 12호, pp1023 ~ 1030"
                        android:textSize="8pt"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>